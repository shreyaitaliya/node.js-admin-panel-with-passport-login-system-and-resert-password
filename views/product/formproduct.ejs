<%- include('../header') %>

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Product Form</h4>
                            <p class="card-description">
                                Product form elements
                            </p>
                            <form class="forms-sample" method="post" action="/productadd" enctype="multipart/form-data">
                                <div class="form-group">
                                    <select name="category" class="form-control">
                                        <option>---Select Category---</option>
                                        <% category.map((cat)=>{ %>
                                            <option value="<%= cat.id %>">
                                                <%= cat.category %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <select name="subcategory" class="form-control">
                                        <option>---Select subategory---</option>
                                        <% subcategory.map((sub)=>{ %>
                                            <option value="<%= sub.id %>">
                                                <%= sub.subcategory %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <select name="excategory" class="form-control">
                                        <option>---Select extracategory---</option>
                                        <% excategoroy.map((ex)=>{ %>
                                            <option value="<%= ex.id %>">
                                                <%= ex.excategory %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="title" class="form-control" placeholder="Enter title">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="price" class="form-control" placeholder="Enter price">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="qty" class="form-control" placeholder="Enter quntity">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="description" class="form-control"
                                        placeholder="Enter Description">
                                </div>
                                <div class="form-group">
                                    <input type="file" name="image" class="form-control">
                                </div>
                                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                                <button class="btn btn-light">Cancel</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
