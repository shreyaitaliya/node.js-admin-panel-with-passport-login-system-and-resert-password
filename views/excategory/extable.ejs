<%- include('../header') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Exsubcategory</h4>
                            <p class="card-description">
                                Exsubcategory Table
                            </p>
                            <div class="table-responsive pt-3">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>
                                                Number
                                            </th>
                                            <th>
                                                Category
                                            </th>
                                            <th>
                                                Subcategory
                                            </th>
                                            <th>
                                                Excategory
                                            </th>
                                            <th>
                                                Status
                                            </th>
                                            <th>
                                                Action
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% record.map((subcate,i)=>{i=i+1 %>
                                            <tr>
                                                <th>
                                                    <%= i %>
                                                </th>
                                                <th>
                                                    <%= subcate.categoryId.category %>
                                                </th>
                                                <th>
                                                    <%= subcate.subcategoryId.subcategory %>
                                                </th>
                                                <th>
                                                    <%= subcate.excategory %>
                                                </th>
                                                <th>
                                                    <% if(subcate.categoryId.status===1) { %>
                                                        <a href="/categoryInstock?id=<%= subcate.categoryId.id %>"
                                                            class="btn btn-success btn-sm">Instock</a>
                                                        <% } else { %>
                                                            <a href="/categoryOutstock?id=<%= subcate.categoryId.id %>"
                                                                class="btn btn-warning btn-sm">Outstock</a>
                                                            <% } %>
                                                </th>
                                                <th>
                                                    <a href="/deleteexrecord?delid=<%= subcate.id %>"
                                                        class="btn btn-danger"><i
                                                            class="fa-solid fa-trash fs-6"></i></a> ||
                                                    <a href="/editexRecord?editId=<%= subcate.id %>"
                                                        class="btn btn-primary"><i
                                                            class="fa-solid fa-edit fs-6"></i></a>
                                                </th>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
        <footer class="footer">
            <div class="card">
                <div class="card-body">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright Â©
                            bootstrapdash.com 2020</span>
                        <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Free <a
                                href="https://www.bootstrapdash.com/" target="_blank">Bootstrap dashboard templates</a>
                            from Bootstrapdash.com</span>
                    </div>
                </div>
            </div>
        </footer>
        <!-- partial -->
    </div>